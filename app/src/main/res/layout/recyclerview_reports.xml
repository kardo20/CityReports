<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="105dp">


    <TextView
        android:layout_width="200dp"
        android:id="@+id/cidade"
        android:textSize="16sp"
        android:layout_marginStart="20dp"
        android:text="Vila do Conde"
        android:textColor="#000"
        android:layout_marginEnd="20dp"
        android:maxLines="1"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cidade"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:text="May 23, 2015"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/border"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_alignParentBottom="true"
        android:background="#808080"/>

    <ImageView
        android:id="@+id/imagem"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_above="@+id/border"
        android:layout_alignEnd="@+id/border"
        android:layout_alignRight="@+id/border"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        app:srcCompat="@drawable/location_user"
        />

    <TextView
        android:id="@+id/descricao"
        android:layout_width="274dp"
        android:layout_height="35dp"
        android:layout_below="@+id/data"
        android:layout_alignStart="@+id/border"
        android:layout_alignLeft="@+id/border"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_toStartOf="@+id/imagem"
        android:layout_toLeftOf="@+id/imagem"
        android:text="TextView" />


</RelativeLayout>